<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">





    <com.gosuncn.mydatetimepicker.view.DateTimePicker
    android:id="@+id/dialog_dateTimePicker"
    app:vertical="true"
    app:halfVisibleItemCount="3"
    app:textGradual="true"
    app:wheelCurtainBorder="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/cancelButton"
            android:background="#f7f7f7"
            android:textColor="#33aaff"
            android:textSize="18sp"
            android:text="@string/datetimepicker_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/okButton"
            android:background="#f7f7f7"
            android:textColor="#33aaff"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:text="@string/datetimepicker_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</FrameLayout>